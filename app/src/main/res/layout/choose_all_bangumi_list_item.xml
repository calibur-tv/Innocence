<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="85dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="12dp">
        <ImageView
            android:id="@+id/choose_all_bangumi_item_icon"
            android:layout_width="45dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/glide_place_holder_img"/>
        <TextView
            android:id="@+id/choose_all_bangumi_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/choose_all_bangumi_item_icon"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="番剧名字"
            android:maxLines="1"
            android:textColor="@color/color_FF5B5B5B"
            android:textSize="17sp"
            />
    </RelativeLayout>
   <View
       android:layout_width="match_parent"
       android:layout_height="0.5dp"
       android:background="@color/color_FFEEEEEE"
       android:layout_alignParentBottom="true"
       />
</RelativeLayout>