<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="120dp">
    <RelativeLayout
        android:id="@+id/drama_timeline_list_item_layout"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/color_FFFFFFFF">
        <ImageView
            android:id="@+id/drama_timeline_list_item_image"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="13dp"
            android:layout_width="67dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            />
        <TextView
            android:id="@+id/drama_timeline_list_item_name"
            android:layout_toRightOf="@id/drama_timeline_list_item_image"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:lines="1"
            android:text="番剧名"
            android:textSize="17sp"
            android:textColor="#333333"
            />
        <TextView
            android:id="@+id/drama_timeline_list_item_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/drama_timeline_list_item_image"
            android:layout_below="@id/drama_timeline_list_item_name"
            android:layout_marginTop="7dp"
            android:layout_marginRight="15dp"
            android:textColor="#9B9B9B"
            android:maxLines="3"
            android:textSize="12sp"
            android:text="XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX"
            android:ellipsize="end"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentBottom="true"
            android:background="@color/color_FFF4F4F4"
            />

    </RelativeLayout>


</RelativeLayout>