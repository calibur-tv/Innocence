<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/reply_card_image_grid_item_image"
        android:background="@color/color_FFEEEEEE"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:scaleType="centerCrop"
        />
    <ImageView
        android:id="@+id/reply_card_image_grid_item_image_delete"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:padding="3dp"
        android:layout_alignTop="@id/reply_card_image_grid_item_image"
        android:layout_alignRight="@id/reply_card_image_grid_item_image"
        android:src="@mipmap/reply_card_image_delete"
        />
</RelativeLayout>