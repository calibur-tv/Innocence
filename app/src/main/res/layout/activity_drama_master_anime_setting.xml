<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.Drama.dramaConfig.DramaMasterAnimeSettingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/color_FFFFFFFF"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">
            <ImageView
                android:id="@+id/drama_master_anime_setting_banner"
                android:layout_width="match_parent"
                android:layout_height="155dp"
                android:background="@color/theme_magic_sakura_primary"
                android:scaleType="centerCrop"
                />
            <ImageView
                android:id="@+id/drama_master_anime_setting_back"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@mipmap/app_btn_back_white"
                android:padding="10dp"
                android:layout_marginTop="20dp"
                />
            <TextView
                android:id="@+id/drama_master_anime_setting_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="番剧名"
                android:layout_centerHorizontal="true"
                android:textColor="@color/color_FFFFFFFF"
                android:layout_marginTop="30dp"
                />
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/drama_master_anime_setting_avatar"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:src="@mipmap/glide_place_holder_img"
                android:scaleType="centerCrop"
                app:riv_border_width="2dp"
                app:riv_border_color="@color/color_FFFFFFFF"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/color_FFFFFFFF">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/drama_master_anime_setting_tag_recycler_view"
                android:layout_width="match_parent"
                android:minHeight="50dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginRight="30dp"
                android:visibility="gone"
                >
            </android.support.v7.widget.RecyclerView>
            <TextView
                android:id="@+id/drama_master_anime_setting_tag_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="点击选择标签"
                android:padding="7dp"
                android:layout_marginRight="30dp"
                android:textSize="15sp"
                android:textColor="@color/color_FF5B5B5B"
                android:background="@drawable/app_bg_item_white_gray"
                />
            <TextView
                android:id="@+id/drama_master_anime_setting_tag_btn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text=" 〉"
                android:textSize="16sp"
                android:textColor="@color/color_FF5B5B5B"
                android:gravity="center"
                android:padding="5dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/app_bg_item_white_gray"
                />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_FFEEEEEE"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:layout_marginBottom="10dp"
            />

        <EditText
            android:id="@+id/drama_master_anime_setting_summary_edit"
            android:layout_width="match_parent"
            android:minHeight="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:padding="5dp"
            android:background="@drawable/app_bg_item_white_gray"
            android:hint="番剧简介(最多200字)"
            android:gravity="top"
            android:textSize="15sp"
            android:textColor="@color/color_FF5B5B5B"
            android:maxLength="200"
            />
        <Button
            android:id="@+id/drama_master_anime_setting_finishBtn"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:text="保存"
            android:textColor="@color/color_FFFFFFFF"
            android:background="@drawable/bg_login_button_normal"
            />

    </LinearLayout>


</android.support.v4.widget.DrawerLayout>