<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.home.DramaTagsFragment">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/drama_tags_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/drama_tags_tags_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/drama_tags_icon"
                android:layout_marginLeft="15dp"
                android:layout_alignTop="@id/drama_tags_tags_text"
                android:layout_alignBottom="@id/drama_tags_tags_text"
                />
            <TextView
                android:id="@+id/drama_tags_tags_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="标签"
                android:layout_toRightOf="@id/drama_tags_tags_icon"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/color_FF9B9B9B"
                android:textSize="12sp"
                />
            <TextView
                android:id="@+id/drama_tags_refresh_tags_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@drawable/text_pressed_color"
                android:layout_alignTop="@id/drama_tags_tags_text"
                android:layout_alignBottom="@id/drama_tags_tags_text"
                android:layout_alignParentRight="true"
                android:textSize="12sp"
                android:text="换一批"
                android:layout_marginRight="15dp"
                />
            <ImageView
                android:id="@+id/drama_tags_refresh_tags_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/drama_tags_tags_text"
                android:layout_alignBottom="@id/drama_tags_tags_text"
                android:layout_toLeftOf="@id/drama_tags_refresh_tags_text"
                android:layout_marginRight="5dp"
                android:src="@mipmap/drama_refresh_tags_icon"
                />
            <com.example.library.AutoFlowLayout
                android:id="@+id/drama_tags_tags_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/drama_tags_tags_text"
                android:layout_marginTop="20dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                >
            </com.example.library.AutoFlowLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/drama_tags_anime_list"
                android:layout_below="@id/drama_tags_tags_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                ></android.support.v7.widget.RecyclerView>

        </RelativeLayout>
    </android.support.v4.widget.SwipeRefreshLayout>

    
</RelativeLayout>