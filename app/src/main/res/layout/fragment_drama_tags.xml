<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.home.DramaTagsFragment">

    <LinearLayout
        android:id="@+id/drama_tags_search_layout"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/theme_magic_sakura_primary"
        android:orientation="horizontal"
        >
        <EditText
            android:id="@+id/drama_tags_search_edit_text"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:background="@drawable/bg_edittext_normal"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="@dimen/dp_10"
            android:paddingLeft="15dp"
            android:hint="搜索番剧"
            android:textSize="14sp"
            android:gravity="center_vertical"
            />
        <ImageView
            android:id="@+id/drama_tags_search_btn"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:src="@mipmap/drama_search_icon"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            />
    </LinearLayout>
    <ImageView
        android:id="@+id/drama_tags_tags_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/drama_tags_search_layout"
        android:src="@mipmap/drama_tags_icon"
        android:layout_marginLeft="15dp"
        android:layout_alignTop="@id/drama_tags_tags_text"
        android:layout_alignBottom="@id/drama_tags_tags_text"
        />
    <TextView
        android:id="@+id/drama_tags_tags_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="标签"
        android:layout_below="@id/drama_tags_search_layout"
        android:layout_toRightOf="@id/drama_tags_tags_icon"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        android:textColor="@color/color_FF9B9B9B"
        android:textSize="12sp"
        />
    <TextView
        android:id="@+id/drama_tags_refresh_tags_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@drawable/text_pressed_color"
        android:layout_alignTop="@id/drama_tags_tags_text"
        android:layout_alignBottom="@id/drama_tags_tags_text"
        android:layout_alignParentRight="true"
        android:textSize="12sp"
        android:text="换一批"
        android:layout_marginRight="15dp"
        />
    <ImageView
        android:id="@+id/drama_tags_refresh_tags_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/drama_tags_tags_text"
        android:layout_alignBottom="@id/drama_tags_tags_text"
        android:layout_toLeftOf="@id/drama_tags_refresh_tags_text"
        android:layout_marginRight="5dp"
        android:src="@mipmap/drama_refresh_tags_icon"
        />
    <com.example.library.AutoFlowLayout
        android:id="@+id/drama_tags_tags_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/drama_tags_tags_text"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"

        >
    </com.example.library.AutoFlowLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/drama_tags_anime_list"
        android:layout_below="@id/drama_tags_tags_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        ></android.support.v7.widget.RecyclerView>

    
</RelativeLayout>