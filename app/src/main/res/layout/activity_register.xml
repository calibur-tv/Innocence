<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.loginAndRegister.RegisterActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:fitsSystemWindows="true"
        android:background="@color/theme_magic_sakura_primary"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="注册"
                android:layout_centerInParent="true"
                android:textSize="18sp"
                android:textColor="@color/color_FFFFFFFF"
                />
            <ImageView
                android:id="@+id/register_start_activity_login_btn"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:padding="@dimen/dp_10"
                android:layout_centerVertical="true"
                android:src="@mipmap/app_btn_back_white"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/color_FFFFFFFF"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="26dp"
                android:layout_marginRight="26dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:background="@drawable/bg_sign_register_edit"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/maintab_mine_normal"
                    android:layout_gravity="center_vertical"
                    />
                <EditText
                    android:maxLength="25"
                    android:hint="输入昵称"
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/register_phone_or_nickname_edit"
                    android:background="@color/color_00FFFFFF"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="26dp"
                android:layout_marginRight="26dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:background="@drawable/bg_sign_register_edit"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_login_register_phone"
                    android:layout_gravity="center_vertical"
                    />
                <EditText
                    android:maxLength="11"
                    android:hint="输入手机号(将作为您的账号)"
                    android:textSize="14sp"
                    android:inputType="phone"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/register_phone_number_edit"
                    android:background="@color/color_00FFFFFF"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="26dp"
                android:layout_marginRight="26dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:background="@drawable/bg_sign_register_edit"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_login_register_password"
                    android:layout_gravity="center_vertical"
                    />
                <EditText
                    android:maxLength="25"
                    android:textSize="14sp"
                    android:hint="设置密码(最多25位)"
                    android:inputType="textPassword"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/register_password_edit"
                    android:background="@color/color_00FFFFFF"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="26dp"
                android:layout_marginRight="26dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:background="@drawable/bg_sign_register_edit"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_login_register_password"
                    android:layout_gravity="center_vertical"
                    />
                <EditText

                    android:maxLength="25"
                    android:textSize="14sp"
                    android:hint="确认密码"
                    android:inputType="textPassword"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/register_password_confirm_edit"
                    android:background="@color/color_00FFFFFF"/>
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="26dp"
                android:layout_marginRight="26dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:background="@drawable/bg_sign_register_edit"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_login_register_verification"
                    android:layout_gravity="center_vertical"
                    />
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@null"
                    android:layout_marginLeft="5dp"
                    android:maxLength="8"
                    android:textSize="14sp"
                    android:hint="输入验证码"
                    android:id="@+id/register_verification_code_edit"
                    />

                <TextView
                    android:id="@+id/register_send_verification_code_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="发送验证码"
                    android:gravity="center"
                    android:textColor="@color/theme_magic_sakura_primary"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="26dp"
                android:layout_marginRight="26dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:background="@drawable/bg_sign_register_edit"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_register_invitation"
                    android:layout_gravity="center_vertical"
                    />
                <EditText
                    android:maxLength="25"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:textSize="14sp"
                    android:hint="输入邀请码（选填）"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/register_invite_code_edit"
                    android:background="@color/color_00FFFFFF" />
            </LinearLayout>

            <Button
                android:id="@+id/register_register_btn"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/bg_login_button_normal"
                android:text="注册并登录"
                android:textSize="14sp"
                android:textColor="@color/color_FFFFFFFF"
                />
        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>