<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <com.bm.library.PhotoView
        android:id="@+id/preview_view_pager_item_photo_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        android:background="@color/color_FF333333"
        />
    <TextView
        android:id="@+id/preview_view_pager_item_save_btn"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="70dp"
        android:background="@drawable/bg_follow_anime_btn"
        android:text="保存图片"
        android:textSize="15sp"
        android:textColor="@color/color_FFFFFFFF"
        android:gravity="center"
        android:shadowColor="@color/color_FF333333"
        android:shadowDx="0.5"
        android:shadowDy="0.5"
        android:shadowRadius="2"
        />


</RelativeLayout>