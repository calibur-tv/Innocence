<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.home.Drama.DramaActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/color_FFFFFFFF"
        >
        <ImageView
            android:id="@+id/drama_activity_anime_banner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            />
        <ImageView
            android:id="@+id/drama_activity_anime_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_margin="20dp"
            android:scaleType="fitCenter"
            />
        <TextView
            android:id="@+id/drama_activity_anime_name"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="番剧名字"
            android:textSize="14sp"
            android:textColor="@color/color_FFFFFFFF"
            android:gravity="center_vertical"
            android:layout_toRightOf="@id/drama_activity_anime_icon"
            android:layout_alignTop="@id/drama_activity_anime_icon"
            />
        <TextView
            android:id="@+id/drama_activity_anime_follow"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="关注"
            android:textColor="@color/color_FFFFFFFF"
            android:textSize="12sp"
            android:gravity="center_vertical"
            android:layout_toRightOf="@id/drama_activity_anime_icon"
            android:layout_alignBottom="@id/drama_activity_anime_icon"
            />
        <TextView
            android:id="@+id/drama_activity_anime_follow_count"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="110"
            android:textColor="@color/color_FFFFFFFF"
            android:textSize="12sp"
            android:gravity="center_vertical"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@id/drama_activity_anime_follow"
            android:layout_alignBottom="@id/drama_activity_anime_icon"
            />
        <TextView
            android:id="@+id/drama_activity_anime_card"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="帖子"
            android:textColor="@color/color_FFFFFFFF"
            android:textSize="12sp"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/drama_activity_anime_follow_count"
            android:layout_alignBottom="@id/drama_activity_anime_icon"
            />
        <TextView
            android:id="@+id/drama_activity_anime_card_count"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="110"
            android:textColor="@color/color_FFFFFFFF"
            android:textSize="12sp"
            android:gravity="center_vertical"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@id/drama_activity_anime_card"
            android:layout_alignBottom="@id/drama_activity_anime_icon"
            />
        <LinearLayout
            android:id="@+id/drama_activity_anime_follow_btn"
            android:layout_marginBottom="30dp"
            android:layout_marginRight="25dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:background="@drawable/bg_follow_anime_btn"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp" />
            <TextView
                android:id="@+id/drama_activity_anime_follow_btn_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="12sp"
                android:textColor="@color/color_FFFFFFFF"
                android:text="关注"
                android:gravity="center"
                />
        </LinearLayout>

    </RelativeLayout>

    <com.riuir.calibur.ui.view.MyPagerSlidingTabStrip
        android:id="@+id/drama_activity_pager_tab"
        android:layout_width="match_parent"
        android:background="@color/color_FF23ADE5"
        android:layout_height="40dp"></com.riuir.calibur.ui.view.MyPagerSlidingTabStrip>
    <android.support.v4.view.ViewPager
        android:id="@+id/drama_activity_view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        ></android.support.v4.view.ViewPager>
</LinearLayout>