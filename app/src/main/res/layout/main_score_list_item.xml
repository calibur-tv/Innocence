<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.hedgehog.ratingbar.RatingBar
        android:id="@+id/main_score_list_item_score_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        app:halfstart="true"
        app:starCount="5"
        app:starEmpty="@mipmap/rating_bar_star_empty"
        app:starHalf="@mipmap/rating_bar_star_half"
        app:starFill="@mipmap/rating_bar_star_full"
        app:starImageHeight="25dp"
        app:starImageWidth="25dp"
        app:starImagePadding="3dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="14dp"
        android:layout_marginRight="14dp"
        />
    <ImageView
        android:id="@+id/main_score_list_item_user_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="14dp"
        android:scaleType="centerInside"
        />
    <TextView
        android:id="@+id/main_score_list_item_anime_name"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignTop="@id/main_score_list_item_user_icon"
        android:layout_toRightOf="@id/main_score_list_item_user_icon"
        android:layout_toLeftOf="@id/main_score_list_item_score_start"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:maxLines="1"
        android:gravity="center_vertical"
        android:textSize="12sp"
        android:text="番剧名字"
        android:textColor="@color/color_FF5B5B5B"
        />
    <TextView
        android:id="@+id/main_score_list_item_user_name_time"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignBottom="@id/main_score_list_item_user_icon"
        android:layout_toRightOf="@id/main_score_list_item_user_icon"
        android:layout_toLeftOf="@id/main_score_list_item_score_start"
        android:layout_marginLeft="10dp"
        android:maxLines="1"
        android:gravity="center_vertical"
        android:textSize="11sp"
        android:text="用户昵称·时间"
        android:textColor="@color/color_FF9B9B9B"
        />
    <TextView
        android:id="@+id/main_score_list_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_score_list_item_user_icon"
        android:layout_marginTop="10dp"
        android:text="漫评标题"
        android:maxLines="1"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:textSize="15sp"
        android:textColor="@color/color_FF5B5B5B"
        />
    <TextView
        android:id="@+id/main_score_list_item_intro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_score_list_item_title"
        android:layout_marginTop="6dp"
        android:text="漫评内容"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:textSize="14sp"
        android:textColor="@color/color_FF7B7B7B"
        android:maxLines="4"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/main_score_list_item_intro"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/main_score_list_item_like_count"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="14sp"
            android:textColor="@color/color_FF7B7B7B"
            android:text="喜欢：0"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/main_score_list_item_comment_count"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="14sp"
            android:textColor="@color/color_FF7B7B7B"
            android:text="评论：0"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/main_score_list_item_collection_count"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="14sp"
            android:textColor="@color/color_FF7B7B7B"
            android:text="收藏：0"
            android:gravity="center"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_FFDDDDDD"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>