<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="100dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    >

    <TextView
        android:id="@+id/drama_role_list_item_number"
        android:layout_width="wrap_content"
        android:minWidth="23dp"
        android:layout_height="28dp"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:lines="1"
        android:text="1"
        android:textSize="16sp"
        android:textColor="@color/theme_magic_sakura_primary"
        />
    <ImageView
        android:id="@+id/drama_role_list_item_number_ic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:visibility="invisible"
        />

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/drama_role_list_item_image"
        android:layout_width="73dp"
        android:layout_height="73dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="40dp"
        android:scaleType="centerCrop" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/drama_role_list_item_image"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        >
        <TextView
            android:id="@+id/drama_role_list_item_role_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="角色名字"
            android:textSize="17sp"
            android:textColor="@color/color_FF333333"
            />
        <TextView
            android:id="@+id/drama_role_list_item_role_anime_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="所属番剧名"
            android:textSize="13sp"
            android:textColor="@color/color_FF9B9B9B"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/drama_role_list_item_role_knight_icon"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginRight="4dp"
                />
            <TextView
                android:id="@+id/drama_role_list_item_role_knight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="XXXX 守护"
                android:lines="1"
                android:textColor="@color/color_FF9B9B9B"
                />
        </LinearLayout>

        <!--<TextView-->
            <!--android:id="@+id/drama_role_list_item_role_intro"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:maxLines="2"-->
            <!--android:text="人物简介:XXXXXXX"-->
            <!--android:textSize="14sp"-->
            <!--android:textColor="@color/color_FF7B7B7B"-->
            <!--/>-->

    </LinearLayout>

    <TextView
        android:id="@+id/drama_role_list_item_role_coin_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:text="团子：0"
        android:layout_marginBottom="8dp"
        android:textColor="@color/theme_magic_sakura_primary"
        android:textSize="12sp"
        />

</RelativeLayout>