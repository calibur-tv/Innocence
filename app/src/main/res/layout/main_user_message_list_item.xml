<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <ImageView
        android:id="@+id/user_message_list_item_user_icon"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:scaleType="centerInside"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="14dp"
        />
    <TextView
        android:id="@+id/user_message_list_item_user_name"
        android:layout_toRightOf="@id/user_message_list_item_user_icon"
        android:layout_alignTop="@id/user_message_list_item_user_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="用户名·XXX以前"
        android:textColor="@color/color_FF7B7B7B"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="6dp"
        android:textSize="12sp"
        />
    <TextView
        android:id="@+id/user_message_list_item_msg_text"
        android:layout_toRightOf="@id/user_message_list_item_user_icon"
        android:layout_below="@id/user_message_list_item_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="XX回复了您在XXXXX下的评论"
        android:textColor="@color/color_FF5B5B5B"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="12dp"
        android:textSize="12sp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_FFD9E3ED"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_below="@id/user_message_list_item_msg_text"
        />
</RelativeLayout>