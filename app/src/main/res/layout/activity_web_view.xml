<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.web.WebViewActivity"
    >
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/theme_magic_sakura_primary"
      android:fitsSystemWindows="true"
      >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
      <ImageView
          android:id="@+id/web_view_activity_back_btn"
          android:layout_width="45dp"
          android:layout_height="45dp"
          android:padding="12dp"
          android:src="@mipmap/app_btn_back_white"
          />
      <android.support.v4.widget.SwipeRefreshLayout
          android:id="@+id/web_view_activity_web_view_swipe_refresh"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:background="@color/color_FFFFFFFF"
          >
        <calibur.core.widget.webview.AthenaWebView
            android:id="@+id/web_view_activity_web_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_FFFFFFFF"
            >
        </calibur.core.widget.webview.AthenaWebView>
      </android.support.v4.widget.SwipeRefreshLayout>
    </LinearLayout>

  </RelativeLayout>


</android.support.v4.widget.DrawerLayout>