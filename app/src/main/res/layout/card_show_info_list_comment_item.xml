<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/app_bg_item_white_gray">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        >
        <ImageView
            android:id="@+id/card_show_info_list_comment_item_user_icon"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:scaleType="centerCrop"
            android:layout_marginRight="10dp"
            />
        <TextView
            android:id="@+id/card_show_info_list_comment_item_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户昵称"
            android:textColor="@color/color_FF7B7B7B"
            android:textSize="15sp"
            android:layout_toRightOf="@id/card_show_info_list_comment_item_user_icon"
            />
        <TextView
            android:id="@+id/card_show_info_list_comment_item_comment_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="第1楼·共N楼·一天前"
            android:textSize="13sp"
            android:textColor="@color/color_FF9B9B9B"
            android:layout_toRightOf="@id/card_show_info_list_comment_item_user_icon"
            android:layout_alignBottom="@id/card_show_info_list_comment_item_user_icon"
            />
        <com.riuir.calibur.ui.widget.popup.AppHeaderPopupWindows
            android:id="@+id/card_show_info_list_comment_item_card_more"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/card_show_info_list_comment_item_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:text="评论评论评论评论评论评论评论评论评论评论评论评论评论评论评论"
        />
    <ImageView
        android:id="@+id/card_show_info_list_comment_item_image1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:layout_marginLeft="67dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="4dp"
        android:visibility="visible"
        android:transitionName="ToPreviewImageActivity"
        android:background="@mipmap/glide_load_place_holder_gray"
        />
    <ImageView
        android:id="@+id/card_show_info_list_comment_item_image2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:layout_marginLeft="67dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="4dp"
        android:visibility="gone"
        android:transitionName="ToPreviewImageActivity"
        android:background="@mipmap/glide_load_place_holder_gray"
        />
    <ImageView
        android:id="@+id/card_show_info_list_comment_item_image3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:layout_marginLeft="67dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="4dp"
        android:visibility="gone"
        android:transitionName="ToPreviewImageActivity"
        android:background="@mipmap/glide_load_place_holder_gray"
        />
    <ImageView
        android:id="@+id/card_show_info_list_comment_item_image4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:layout_marginLeft="67dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="4dp"
        android:visibility="gone"
        android:transitionName="ToPreviewImageActivity"
        android:background="@mipmap/glide_load_place_holder_gray"
        />
    <ImageView
        android:id="@+id/card_show_info_list_comment_item_image5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:layout_marginLeft="67dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="4dp"
        android:visibility="gone"
        android:transitionName="ToPreviewImageActivity"
        android:background="@mipmap/glide_load_place_holder_gray"
        />
    <ImageView
        android:id="@+id/card_show_info_list_comment_item_image6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:layout_marginLeft="67dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="4dp"
        android:visibility="gone"
        android:transitionName="ToPreviewImageActivity"
        android:background="@mipmap/glide_load_place_holder_gray"
        />
    <ImageView
        android:id="@+id/card_show_info_list_comment_item_image7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:layout_marginLeft="67dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="4dp"
        android:visibility="gone"
        android:transitionName="ToPreviewImageActivity"
        android:background="@mipmap/glide_load_place_holder_gray"
        />
    <ImageView
        android:id="@+id/card_show_info_list_comment_item_image8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:layout_marginLeft="67dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="4dp"
        android:visibility="gone"
        android:transitionName="ToPreviewImageActivity"
        android:background="@mipmap/glide_load_place_holder_gray"
        />
    <ImageView
        android:id="@+id/card_show_info_list_comment_item_image9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:layout_marginLeft="67dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="4dp"
        android:visibility="gone"
        android:transitionName="ToPreviewImageActivity"
        android:background="@mipmap/glide_load_place_holder_gray"
        />
    <LinearLayout
        android:id="@+id/card_show_info_list_comment_item_child_comment_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_FFEEEEEE"
        android:layout_marginLeft="67dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="4dp"
        android:orientation="vertical"
        android:padding="5dp"
        android:visibility="gone"
        >
        <TextView
            android:id="@+id/card_show_info_list_comment_item_child_comment1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AAA 回复 BBB:XXXXXXXX"
            android:layout_margin="2dp"
            android:visibility="gone"
            android:background="@drawable/card_child_comment_background"
            />
        <TextView
            android:id="@+id/card_show_info_list_comment_item_child_comment2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BBB 回复 AAA:XXXXXXXX"
            android:layout_margin="2dp"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/card_show_info_list_comment_item_child_comment_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="查看更多回复>>>"
            android:layout_margin="2dp"
            android:textColor="@color/theme_magic_sakura_primary"
            android:visibility="gone"
            android:background="@drawable/card_child_comment_background"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="67dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="4dp"
        >
        <LinearLayout
            android:id="@+id/card_show_info_list_comment_item_upovte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <ImageView
                android:id="@+id/card_show_info_list_comment_item_upovte_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_zan_normal"
                />
            <TextView
                android:id="@+id/card_show_info_list_comment_item_upovte_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="赞"
                android:textSize="12sp"
                android:textColor="@color/color_FF9B9B9B"
                android:layout_marginLeft="6dp"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/card_show_info_list_comment_item_reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="回复"
            android:textSize="12sp"
            android:textColor="@color/color_FF9B9B9B"
            />
    </RelativeLayout>
</LinearLayout>