<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.image.ImageShowInfoActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:fitsSystemWindows="true"
        android:background="@color/theme_magic_sakura_primary"
        android:focusable="true"
        android:focusableInTouchMode="true"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/theme_magic_sakura_primary"
            >
            <ImageView
                android:id="@+id/image_show_info_back_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/app_btn_back_white"
                android:padding="10dp"
                android:layout_centerVertical="true"
                />
            <com.riuir.calibur.ui.widget.popup.AppHeaderPopupWindows
                android:id="@+id/image_show_info_list_header_card_more"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:textSize="15sp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/image_show_info_refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >
            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_FFFFFFFF"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/image_show_info_list_header_card_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="标题加载中..."
                            android:textSize="18sp"
                            android:paddingLeft="12dp"
                            android:paddingRight="12dp"
                            android:paddingTop="6dp"
                            android:paddingBottom="6dp"
                            />
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:paddingLeft="12dp"
                            android:paddingRight="12dp"
                            android:paddingTop="6dp"
                            android:paddingBottom="6dp"
                            android:layout_marginTop="10dp"
                            >
                            <ImageView
                                android:id="@+id/image_show_info_list_header_user_icon"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:scaleType="centerCrop"
                                android:layout_marginRight="10dp"
                                />
                            <TextView
                                android:id="@+id/image_show_info_list_header_user_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="昵称加载中..."
                                android:lines="1"
                                android:textColor="@color/color_FF7B7B7B"
                                android:textSize="15sp"
                                android:layout_toRightOf="@id/image_show_info_list_header_user_icon"
                                />
                            <TextView
                                android:id="@+id/image_show_info_list_header_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="第1楼·共N楼·一天前"
                                android:textSize="13sp"
                                android:textColor="@color/color_FF9B9B9B"
                                android:layout_toRightOf="@id/image_show_info_list_header_user_icon"
                                android:layout_alignBottom="@id/image_show_info_list_header_user_icon"
                                />

                        </RelativeLayout>
                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/image_show_info_list_header_card_image_list"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone">
                        </android.support.v7.widget.RecyclerView>
                        <LinearLayout
                            android:id="@+id/image_show_info_list_header_card_image_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >
                        </LinearLayout>
                        <TextView
                            android:id="@+id/image_show_info_list_header_card_no_img_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:text="还没有上传内容哦"
                            android:textColor="@color/color_FF333333"
                            android:gravity="center"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:visibility="gone"
                            />
                        <com.riuir.calibur.ui.widget.TrendingLikeFollowCollectionView
                            android:id="@+id/image_show_info_list_header_lfc_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            ></com.riuir.calibur.ui.widget.TrendingLikeFollowCollectionView>

                        <com.riuir.calibur.ui.widget.BangumiForShowView
                            android:id="@+id/image_show_info_list_header_bangumi_view"
                            android:layout_width="match_parent"
                            android:layout_height="100dp">

                        </com.riuir.calibur.ui.widget.BangumiForShowView>
                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/image_show_info_list_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="10dp"
                            ></android.support.v7.widget.RecyclerView>
                        <com.tencent.smtt.sdk.WebView
                            android:id="@+id/image_show_info_webview"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"></com.tencent.smtt.sdk.WebView>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v4.widget.NestedScrollView>
        </android.support.v4.widget.SwipeRefreshLayout>

        <com.riuir.calibur.ui.widget.replyAndComment.ReplyAndCommentView
            android:id="@+id/image_show_info_comment_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="45dp">
        </com.riuir.calibur.ui.widget.replyAndComment.ReplyAndCommentView>
    </LinearLayout>


</android.support.v4.widget.DrawerLayout>