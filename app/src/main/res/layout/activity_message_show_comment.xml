<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.message.MessageShowCommentActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:background="@color/theme_magic_sakura_primary"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/theme_magic_sakura_primary"
            >
            <ImageView
                android:id="@+id/message_show_comment_back_btn"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@mipmap/app_btn_back_white"
                android:padding="10dp"
                />
            <TextView
                android:id="@+id/message_show_comment_main_card"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="主题帖"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:textColor="@color/color_FFFFFFFF"
                android:layout_marginRight="8dp"
                />
        </RelativeLayout>

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/message_show_comment_header_refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/color_FFFFFFFF">
            <android.support.v4.widget.NestedScrollView
                android:id="@+id/message_show_comment_header_scroll_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_FFFFFFFF"
                >
                <LinearLayout
                    android:id="@+id/message_show_comment_header_comment_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <RelativeLayout
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingRight="12dp"
                        android:paddingLeft="12dp"
                        >
                        <com.makeramen.roundedimageview.RoundedImageView
                            android:id="@+id/message_show_comment_header_icon"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:scaleType="centerCrop"
                            android:layout_marginRight="6dp"
                            app:riv_oval="true"
                            />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:orientation="horizontal"
                            android:layout_alignTop="@id/message_show_comment_header_icon"
                            android:layout_toRightOf="@id/message_show_comment_header_icon"
                            >
                            <TextView
                                android:id="@+id/message_show_comment_header_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="用户昵称"
                                android:textColor="@color/color_FF7B7B7B"
                                android:textSize="15sp"
                                />
                            <TextView
                                android:id="@+id/message_show_comment_header_card_master"
                                android:layout_width="wrap_content"
                                android:layout_height="25dp"
                                android:gravity="center"
                                android:text="(楼主)"
                                android:visibility="gone"
                                />
                            <ImageView
                                android:id="@+id/message_show_comment_header_bangumi_master"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:visibility="gone"
                                android:src="@mipmap/ic_comment_leader"
                                />
                            <ImageView
                                android:id="@+id/message_show_comment_header_executer"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:padding="3dp"
                                android:visibility="gone"
                                android:src="@mipmap/ic_comment_master"
                                />
                        </LinearLayout>
                        <TextView
                            android:id="@+id/message_show_comment_header_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="第1楼·共N楼·一天前"
                            android:textSize="13sp"
                            android:textColor="@color/color_FF9B9B9B"
                            android:layout_toRightOf="@id/message_show_comment_header_icon"
                            android:layout_alignBottom="@id/message_show_comment_header_icon"
                            />
                    </RelativeLayout>
                    <TextView
                        android:id="@+id/message_show_comment_header_comment_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="55dp"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:text="评论加载中..."
                        />
                    <LinearLayout
                        android:id="@+id/message_show_comment_header_comment_image_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="67dp"
                        android:layout_marginRight="12dp"
                        >
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        >
                        <ImageView
                            android:id="@+id/message_show_comment_header_comment_upovte_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ic_zan_normal"
                            />
                        <TextView
                            android:id="@+id/message_show_comment_header_comment_upovte_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="赞"
                            android:textSize="12sp"
                            android:textColor="@color/color_FF9B9B9B"
                            android:layout_marginLeft="6dp"
                            />
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="6dp"
                        android:background="@color/color_FFDDDDDD"
                        />
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/message_show_comment_header_child_comment_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dp"
                        android:layout_marginRight="14dp"
                        ></android.support.v7.widget.RecyclerView>

                </LinearLayout>

            </android.support.v4.widget.NestedScrollView>
        </android.support.v4.widget.SwipeRefreshLayout>

        <com.riuir.calibur.ui.widget.ReplyAndCommentView
            android:id="@+id/message_show_comment_reply_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_FFFFFFFF"
            android:minHeight="45dp"></com.riuir.calibur.ui.widget.ReplyAndCommentView>
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>