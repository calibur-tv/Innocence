<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.card.CardReplyActivity">
    <TextView
        android:id="@+id/card_reply_activity_title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="回复"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/color_FFFFFFFF"
        android:background="@color/theme_magic_sakura_primary"
        />
    <TextView
        android:id="@+id/card_reply_activity_send"
        android:layout_marginLeft="8dp"
        android:layout_below="@id/card_reply_activity_title"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="发帖"
        android:gravity="center"
        android:textSize="16sp"
        />
    <TextView
        android:id="@+id/card_reply_activity_cancel"
        android:layout_below="@id/card_reply_activity_title"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginRight="8dp"
        android:text="取消"
        android:gravity="center"
        android:textSize="16sp"
        android:layout_alignParentRight="true"
        />
    <EditText
        android:padding="8dp"
        android:id="@+id/card_reply_activity_edit"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="140dp"
        android:layout_below="@id/card_reply_activity_send"
        android:hint="请输入回复（最多100字）"
        android:gravity="top"
        android:textSize="14sp"
        android:background="@drawable/bg_edittext_normal"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/card_reply_activity_image_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/card_reply_activity_edit"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        ></android.support.v7.widget.RecyclerView>


</RelativeLayout>