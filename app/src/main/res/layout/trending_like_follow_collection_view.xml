<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/trending_header_like_checkBtn"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:background="@drawable/bg_card_show_header_like"
            android:text="喜欢"
            android:gravity="center"
            android:textColor="@color/color_FFFFFFFF"
            android:layout_marginRight="15dp"
            android:textSize="10sp"
            android:drawableLeft="@mipmap/card_show_header_like_normal"
            />

        <Button
            android:id="@+id/trending_header_rewarded_btn"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:background="@drawable/bg_card_show_header_reward"
            android:text="投食"
            android:gravity="center"
            android:textColor="@color/color_FFFFFFFF"
            android:textSize="10sp"
            android:layout_marginRight="15dp"
            android:drawableLeft="@mipmap/card_show_header_like_normal"
            />

        <Button
            android:id="@+id/trending_header_collection_checkBtn"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:background="@drawable/bg_card_show_header_collection"
            android:text="收藏"
            android:layout_centerInParent="true"
            android:textColor="@color/color_FFFFFFFF"
            android:textSize="10sp"
            android:drawableLeft="@mipmap/card_show_header_star_normal"
            />

    </LinearLayout>
</RelativeLayout>