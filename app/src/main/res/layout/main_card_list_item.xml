<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/main_card_list_item_anime_cover"
        android:layout_width="37dp"
        android:layout_height="49dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="centerCrop"
        />
    <TextView
        android:id="@+id/main_card_list_item_anime_name"
        android:layout_width="0dp"
        android:minHeight="19dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp"
        android:textSize="14sp"
        android:textColor="#615C5D"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/main_card_list_item_anime_cover"
        app:layout_constraintTop_toTopOf="@id/main_card_list_item_anime_cover"
        />
    <TextView
        android:id="@+id/main_card_list_item_user_name"
        android:layout_width="0dp"
        android:minHeight="15dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:textSize="11sp"
        android:textColor="#615C5D"
        app:layout_constraintBottom_toBottomOf="@id/main_card_list_item_anime_cover"
        app:layout_constraintTop_toBottomOf="@id/main_card_list_item_anime_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/main_card_list_item_anime_cover"
        />
    <TextView
        android:id="@+id/main_card_list_item_card_title"
        app:layout_constraintTop_toBottomOf="@id/main_card_list_item_anime_cover"
        app:layout_constraintLeft_toLeftOf="@id/main_card_list_item_anime_cover"
        app:layout_constraintRight_toRightOf="@id/main_card_list_item_anime_name"
        android:textSize="17sp"
        android:textColor="#333333"
        android:layout_marginTop="10dp"
        android:layout_width="0dp"
        android:minHeight="20dp"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/main_card_list_item_card_desc"
        app:layout_constraintTop_toBottomOf="@id/main_card_list_item_card_title"
        app:layout_constraintLeft_toLeftOf="@id/main_card_list_item_anime_cover"
        app:layout_constraintRight_toRightOf="@id/main_card_list_item_anime_name"
        android:layout_marginTop="10dp"
        android:layout_width="0dp"
        android:textSize="11sp"
        android:textColor="#615C5D"
        android:layout_height="wrap_content"
        android:maxLines="5"
        android:minHeight="12dp"
        />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/main_card_list_item_card_desc"
        app:layout_constraintLeft_toLeftOf="@id/main_card_list_item_anime_cover"
        app:layout_constraintRight_toRightOf="@id/main_card_list_item_anime_name"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/main_card_list_item_big_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitStart"
            android:visibility="gone"
            android:transitionName="preview_card_picture"
            />
        <LinearLayout
            android:id="@+id/main_card_list_item_little_image_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            >
            <ImageView
                android:id="@+id/main_card_list_item_little_image_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="105dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:visibility="invisible"
                android:transitionName="preview_card_picture"
                />
            <ImageView
                android:id="@+id/main_card_list_item_little_image_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="105dp"
                android:layout_weight="1"
                android:layout_marginLeft="15dp"
                android:scaleType="centerCrop"
                android:visibility="invisible"
                android:transitionName="preview_card_picture"
                />
            <ImageView
                android:id="@+id/main_card_list_item_little_image_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="105dp"
                android:layout_weight="1"
                android:layout_marginLeft="15dp"
                android:scaleType="centerCrop"
                android:visibility="invisible"
                android:transitionName="preview_card_picture"
                />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            >
            <TextView
                android:id="@+id/main_card_list_item_last_comment_time"
                android:layout_width="wrap_content"
                android:layout_height="12dp"
                android:text="0分钟前"
                android:textColor="#9B9B9B"
                android:textSize="8sp"
                />

            <TextView
                android:id="@+id/main_card_list_item_last_comment_count"
                android:layout_width="20dp"
                android:layout_height="12dp"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:text="888"
                android:textColor="#9B9B9B"
                android:textSize="8sp"
                />
            <ImageView
                android:id="@+id/main_card_list_item_last_comment_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/main_card_list_item_last_comment_count"
                android:src="@mipmap/card_comment_icon"
                android:layout_marginRight="2dp"
                />
            <TextView
                android:id="@+id/main_card_list_item_upvote_count"
                android:layout_width="20dp"
                android:layout_height="12dp"
                android:gravity="center"
                android:layout_toLeftOf="@id/main_card_list_item_last_comment_icon"
                android:layout_marginRight="5dp"
                android:text="8888"
                android:textColor="#9B9B9B"
                android:textSize="8sp"
                />
            <ImageView
                android:id="@+id/main_card_list_item_upvote_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/main_card_list_item_upvote_count"
                android:src="@mipmap/card_upvote_icon"
                android:layout_marginRight="2dp"
                />
        </RelativeLayout>
    </LinearLayout>





</android.support.constraint.ConstraintLayout>