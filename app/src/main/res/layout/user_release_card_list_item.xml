        <LinearLayout
            android:id="@+id/user_release_list_item_tag_layout"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="6dp"
            android:orientation="horizontal"
            android:padding="3dp"
            >
            <TextView
                android:id="@+id/user_release_list_item_tag_1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="6dp"
                android:background="@drawable/bg_post_list_tag_gray"
                android:text="标签"
                android:textSize="12sp"
                android:textColor="@color/color_FF333333"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:gravity="center"
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/user_release_list_item_tag_2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="6dp"
                android:background="@drawable/bg_post_list_tag_gray"
                android:text="标签"
                android:textSize="12sp"
                android:textColor="@color/color_FF333333"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:gravity="center"
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/user_release_list_item_tag_3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/bg_post_list_tag_gray"
                android:text="标签"
                android:textSize="12sp"
                android:textColor="@color/color_FF333333"
                android:maxLength="10"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:gravity="center"
                android:visibility="gone"
                />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="15dp"
            >
            <ImageView
                android:id="@+id/user_release_list_item_zan_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_zan_normal"
                android:layout_marginRight="3dp"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/user_release_list_item_zan_count"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_toRightOf="@id/user_release_list_item_zan_icon"
                android:text="0"
                android:layout_marginRight="30dp"
                android:textColor="@color/color_FF7B7B7B"
                android:textSize="13sp"
                />
            <ImageView
                android:id="@+id/user_release_list_item_reward_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_pay"
                android:layout_marginRight="3dp"
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/user_release_list_item_reward_count"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_toRightOf="@id/user_release_list_item_reward_icon"
                android:text="0"
                android:layout_marginRight="30dp"
                android:textColor="@color/color_FF7B7B7B"
                android:textSize="13sp"
                android:visibility="gone"
                />
            <ImageView
                android:id="@+id/user_release_list_item_marked_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_mark_normal"
                android:layout_centerVertical="true"
                android:layout_marginRight="3dp"
                android:layout_marginLeft="70dp"
                />
            <TextView
                android:id="@+id/user_release_list_item_marked_count"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/user_release_list_item_marked_icon"
                android:gravity="center"
                android:text="0"
                android:layout_marginRight="30dp"
                android:textColor="@color/color_FF7B7B7B"
                android:textSize="13sp"
                />
            <ImageView
                android:id="@+id/user_release_list_item_comment_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_comment"
                android:layout_centerVertical="true"
                android:layout_marginRight="3dp"
                android:layout_toRightOf="@id/user_release_list_item_marked_count"
                />
            <TextView
                android:id="@+id/user_release_list_item_comment_count"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/user_release_list_item_comment_icon"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/color_FF7B7B7B"
                android:textSize="13sp"
                />
        </RelativeLayout>
