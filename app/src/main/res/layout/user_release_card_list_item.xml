<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/user_release_list_item_bangumi_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:scaleType="centerCrop"
        />
    <TextView
        android:id="@+id/user_release_list_item_card_name"
        android:layout_width="match_parent"
        android:minHeight="19dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp"
        android:textSize="14sp"
        android:text="帖子名称"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="@color/color_FF7B7B7B"
        android:layout_toRightOf="@id/user_release_list_item_bangumi_icon"
        android:layout_alignTop="@id/user_release_list_item_bangumi_icon"
        />
    <TextView
        android:id="@+id/user_release_list_item_card_time"
        android:layout_width="match_parent"
        android:minHeight="15dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:text="番剧名·0分钟前"
        android:textSize="11sp"
        android:textColor="@color/color_FF9B9B9B"
        android:layout_alignBottom="@id/user_release_list_item_bangumi_icon"
        app:layout_constraintTop_toBottomOf="@id/user_release_list_item_card_name"
        android:layout_toRightOf="@id/user_release_list_item_bangumi_icon"
        />
    <TextView
        android:id="@+id/user_release_list_item_card_desc"
        android:layout_below="@id/user_release_list_item_card_time"
        android:layout_alignLeft="@id/user_release_list_item_bangumi_icon"
        android:layout_alignRight="@id/user_release_list_item_card_name"
        android:layout_marginTop="6dp"
        android:layout_width="0dp"
        android:textSize="13sp"
        android:text="帖子简介"
        android:ellipsize="end"
        android:textColor="#615C5D"
        android:layout_height="wrap_content"
        android:maxLines="5"
        android:minHeight="12dp"
        />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_release_list_item_card_desc"
        android:layout_alignLeft="@id/user_release_list_item_bangumi_icon"
        android:layout_alignRight="@id/user_release_list_item_card_name"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/user_release_list_item_big_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitStart"
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:transitionName="preview_card_picture"
            />
        <LinearLayout
            android:id="@+id/user_release_list_item_little_image_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            >
            <ImageView
                android:id="@+id/user_release_list_item_little_image_1"
                android:layout_width="0dp"
                android:layout_height="108dp"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:visibility="invisible"
                android:transitionName="preview_card_picture"
                />
            <ImageView
                android:id="@+id/user_release_list_item_little_image_2"
                android:layout_width="0dp"
                android:layout_height="108dp"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:scaleType="centerInside"
                android:visibility="invisible"
                android:transitionName="preview_card_picture"
                />
            <ImageView
                android:id="@+id/user_release_list_item_little_image_3"
                android:layout_width="0dp"
                android:layout_height="108dp"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:scaleType="centerInside"
                android:visibility="invisible"
                android:transitionName="preview_card_picture"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/user_release_list_item_reward_count"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:text="赞赏：0"
                android:textColor="@color/color_FF7B7B7B"
                android:textSize="12sp"
                />

            <TextView
                android:id="@+id/user_release_list_item_marked_count"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginRight="5dp"
                android:text="收藏：0"
                android:textColor="@color/color_FF7B7B7B"
                android:textSize="12sp"
                />
            <TextView
                android:id="@+id/user_release_list_item_commented_count"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginRight="5dp"
                android:text="评论：0"
                android:textColor="@color/color_FF7B7B7B"
                android:textSize="12sp"
                />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>