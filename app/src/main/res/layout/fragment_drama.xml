<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_magic_sakura_primary">

    <RelativeLayout
        android:id="@+id/drama_search_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/theme_magic_sakura_primary"
        >
        <TextView
            android:id="@+id/drama_search_edit_text"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/bg_edittext_normal"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:paddingLeft="15dp"
            android:hint="搜索番剧"
            android:textSize="15sp"
            android:gravity="center_vertical"
            android:transitionName="ToSearchDramaActivity"
            />
        <ImageView
            android:id="@+id/drama_search_btn"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:src="@mipmap/drama_search_icon"
            android:layout_alignRight="@id/drama_search_edit_text"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="6dp"
            android:layout_marginRight="11dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/drama_pager_header_layout"
        android:layout_width="match_parent"
        android:layout_below="@id/drama_search_layout"
        android:layout_height="51dp">
        <com.riuir.calibur.ui.view.MyPagerSlidingTabStrip
            android:id="@+id/drama_pager_tab"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_height="42dp"
            >
        </com.riuir.calibur.ui.view.MyPagerSlidingTabStrip>
    </RelativeLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/drama_view_pager"
        android:layout_below="@id/drama_pager_header_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_FFFFFFFF"
        >
    </android.support.v4.view.ViewPager>


</RelativeLayout>