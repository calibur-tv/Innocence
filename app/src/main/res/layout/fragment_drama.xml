<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_FF23ADE5">

    <TextView
        android:id="@+id/tv_drama"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:clipToPadding="true"
        android:fitsSystemWindows="true"
        android:gravity="center"
        android:text="番剧"
        android:textColor="@color/color_FFFFFFFF"
        android:textSize="20sp" />

    <com.riuir.calibur.ui.view.MyPagerSlidingTabStrip
        android:id="@+id/drama_pager_tab"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="60dp">
    </com.riuir.calibur.ui.view.MyPagerSlidingTabStrip>

    <android.support.v4.view.ViewPager
        android:id="@+id/drama_view_pager"
        android:layout_below="@id/drama_pager_tab"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_FFFFFFFF"
        >
    </android.support.v4.view.ViewPager>


</RelativeLayout>