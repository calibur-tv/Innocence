<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.Drama.dramaConfig.DramaMasterPostSettingActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:background="@color/theme_magic_sakura_primary"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:id="@+id/drama_master_post_setting_back"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@mipmap/app_btn_back_white"
                android:padding="12dp"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_FFFFFFFF"
            android:padding="17dp"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="加精:"
                android:textColor="@color/color_FF5B5B5B"
                android:textSize="14sp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:background="@color/color_FFF4F4F4">
                <EditText
                    android:id="@+id/drama_master_post_setting_jing_edit"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="5"
                    android:paddingLeft="8dp"
                    android:background="@color/color_FFF4F4F4"
                    android:hint="要加精的帖子链接"
                    android:textSize="13sp"
                    />
                <TextView
                    android:id="@+id/drama_master_post_setting_jing_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.3"
                    android:text="确定"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="@color/theme_magic_sakura_primary"
                    android:background="@drawable/app_bg_item_gray_more_gray"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="取消精:"
                android:textColor="@color/color_FF5B5B5B"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:background="@color/color_FFF4F4F4">
                <EditText
                    android:id="@+id/drama_master_post_setting_cancel_jing_edit"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="5"
                    android:paddingLeft="8dp"
                    android:background="@color/color_FFF4F4F4"
                    android:hint="要取消精的帖子链接"
                    android:textSize="13sp"
                    />
                <TextView
                    android:id="@+id/drama_master_post_setting_cancel_jing_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.3"
                    android:text="确定"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="@color/theme_magic_sakura_primary"
                    android:background="@drawable/app_bg_item_gray_more_gray"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="置顶（至多3个）:"
                android:textColor="@color/color_FF5B5B5B"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:background="@color/color_FFF4F4F4">
                <EditText
                    android:id="@+id/drama_master_post_setting_top_edit"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="5"
                    android:paddingLeft="8dp"
                    android:background="@color/color_FFF4F4F4"
                    android:hint="要置顶的帖子链接"
                    android:textSize="13sp"
                    />
                <TextView
                    android:id="@+id/drama_master_post_setting_top_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.3"
                    android:text="确定"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="@color/theme_magic_sakura_primary"
                    android:background="@drawable/app_bg_item_gray_more_gray"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="取消置顶:"
                android:textColor="@color/color_FF5B5B5B"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:background="@color/color_FFF4F4F4">
                <EditText
                    android:id="@+id/drama_master_post_setting_cancel_top_edit"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="5"
                    android:paddingLeft="8dp"
                    android:background="@color/color_FFF4F4F4"
                    android:hint="要取消置顶的帖子链接"
                    android:textSize="13sp"
                    />
                <TextView
                    android:id="@+id/drama_master_post_setting_cancel_top_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.3"
                    android:text="确定"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="@color/theme_magic_sakura_primary"
                    android:background="@drawable/app_bg_item_gray_more_gray"
                    />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>