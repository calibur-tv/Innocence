<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.choose.ChooseNewCardBangumiActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:background="@color/theme_magic_sakura_primary"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/choose_new_card_bangumi_title_layout"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/theme_magic_sakura_primary">
            <TextView
                android:id="@+id/choose_new_card_bangumi_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择番剧"
                android:layout_centerInParent="true"
                android:textSize="16sp"
                android:textColor="@color/color_FFFFFFFF"
                />
            <ImageView
                android:id="@+id/choose_new_card_bangumi_cancel"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:padding="12dp"
                android:src="@mipmap/app_btn_back_white"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/choose_new_card_bangumi_search_layout"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@color/theme_magic_sakura_primary"
            android:orientation="horizontal"
            android:focusable="true"
            android:focusableInTouchMode="true"
            >
            <EditText
                android:id="@+id/choose_new_card_bangumi_search_edit_text"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="@drawable/bg_edittext_normal"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:paddingLeft="15dp"
                android:hint="搜索番剧"
                android:textSize="14sp"
                android:gravity="center_vertical"
                android:transitionName="ToSearchDramaActivity"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:maxLines="1"
                />
            <ImageView
                android:id="@+id/choose_new_card_bangumi_search_btn"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:padding="8dp"
                android:src="@mipmap/drama_search_icon"
                android:layout_alignRight="@id/choose_new_card_bangumi_search_edit_text"
                android:layout_marginRight="8dp"
                android:layout_centerVertical="true"
                />

            <TextView
                android:id="@+id/choose_new_card_bangumi_search_clear_edit"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/choose_new_card_bangumi_search_btn"
                android:layout_marginRight="6dp"
                android:text="×"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="@color/color_FF9B9B9B"
                android:visibility="visible"
                />
        </RelativeLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/choose_new_card_bangumi_list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_FFFFFFFF"></android.support.v7.widget.RecyclerView>
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>