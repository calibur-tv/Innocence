<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.widget.SelectorImagesActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:background="@color/theme_magic_sakura_primary"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/theme_magic_sakura_primary"
            >
            <ImageView
                android:id="@+id/select_image_cancel"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="12dp"
                android:src="@mipmap/create_new_icon_cancel"

                />
            <ImageView
                android:id="@+id/select_image_ok"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="12dp"
                android:src="@mipmap/create_new_icon_finish"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_FFFFFFFF">
            <GridView
                android:id="@+id/select_image_grid_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:numColumns="4"
                android:horizontalSpacing="5dp"
                android:verticalSpacing="5dp"
                ></GridView>
        </RelativeLayout>
    </LinearLayout>

</android.support.v4.widget.DrawerLayout>