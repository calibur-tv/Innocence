<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.mine.MineInfoSettingActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <ImageView
                android:id="@+id/user_setting_banner"
                android:layout_width="match_parent"
                android:layout_height="155dp"
                android:background="@color/theme_magic_sakura_primary"
                android:scaleType="centerCrop"
                />
            <ImageView
                android:id="@+id/user_setting_back"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@mipmap/app_btn_back_white"
                android:padding="10dp"
                android:layout_marginTop="20dp"
                />
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/user_setting_icon"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:src="@mipmap/glide_place_holder_img"
                android:scaleType="centerCrop"
                app:riv_border_width="2dp"
                app:riv_border_color="@color/color_FFFFFFFF"
                app:riv_oval="true"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal"
            android:layout_marginRight="15dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_marginTop="5dp">
            <TextView
                android:id="@+id/user_setting_user_name_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="昵称"
                android:textSize="14sp"
                android:textColor="@color/color_FF5B5B5B"
                android:gravity="center_vertical"
                android:layout_marginRight="10dp"
                />
            <EditText
                android:id="@+id/user_setting_user_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="用户昵称"
                android:maxEms="14"
                android:gravity="center_vertical"
                android:textSize="14sp"
                android:textColor="@color/color_FF333333"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp">
            <TextView
                android:id="@+id/user_setting_birthday_title_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="生日"
                android:textSize="14sp"
                android:textColor="@color/color_FF5B5B5B"
                android:gravity="center_vertical"
                android:layout_marginRight="10dp"
                />
            <TextView
                android:id="@+id/user_setting_birthday"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="yyyy年MM月dd日"
                android:textSize="14sp"
                android:textColor="@color/color_FF5B5B5B"
                android:gravity="center_vertical"
                android:layout_marginRight="10dp"
                />
            <TextView
                android:id="@+id/user_setting_birthday_status"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="状态：公开"
                android:textSize="14sp"
                android:textColor="@color/color_FF5B5B5B"
                android:gravity="center_vertical"
                android:layout_marginRight="10dp"
                />
            <com.suke.widget.SwitchButton
                android:id="@+id/user_setting_birthday_switch"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:sb_show_indicator="false"
                app:sb_checked_color="@color/theme_magic_sakura_primary"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp">
            <TextView
                android:id="@+id/user_setting_sex_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="性别"
                android:textSize="14sp"
                android:textColor="@color/color_FF5B5B5B"
                android:gravity="center_vertical"
                android:layout_marginRight="10dp"
                />
            <TextView
                android:id="@+id/user_setting_sex"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="请选择"
                android:textSize="14sp"
                android:textColor="@color/color_FF5B5B5B"
                android:gravity="center_vertical"
                android:layout_marginRight="10dp"
                />
            <TextView
                android:id="@+id/user_setting_sex_status"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="状态：公开"
                android:textSize="14sp"
                android:textColor="@color/color_FF5B5B5B"
                android:gravity="center_vertical"
                android:layout_marginRight="10dp"
                />
            <com.suke.widget.SwitchButton
                android:id="@+id/user_setting_sex_switch"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:sb_show_indicator="false"
                app:sb_checked_color="@color/theme_magic_sakura_primary"
                />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp">
            <TextView
                android:id="@+id/user_setting_signature_title"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="签名"
                android:textSize="14sp"
                android:textColor="@color/color_FF5B5B5B"
                android:layout_marginRight="10dp"
                />
            <EditText
                android:id="@+id/user_setting_signature"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="这个人还很神秘"
                android:maxLength="60"
                android:gravity="start"
                android:textSize="14sp"
                android:textColor="@color/color_FF333333"
                android:layout_toRightOf="@id/user_setting_signature_title"
                />
        </RelativeLayout>
        <Button
            android:id="@+id/user_setting_finishBtn"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:text="保存"
            android:textColor="@color/color_FFFFFFFF"
            android:background="@drawable/bg_login_button_normal"
            />
    </LinearLayout>

</android.support.v4.widget.DrawerLayout>