<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/maintab_menu"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:layout_gravity="center"
    tools:background="@color/cpb_green"
    android:clickable="true"
    >

    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/transprent" />

    <RelativeLayout
        android:id="@+id/maintab_dis"
        android:layout_width="40dp"
        android:gravity="center_vertical"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/maintab_dis_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:src="@drawable/maintab_discovery_iv" />

        <TextView
            android:id="@+id/maintab_dis_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/maintab_dis_iv"
            android:layout_centerHorizontal="true"
            android:text="社区"
            android:textColor="@drawable/maintab_text_color"
            android:textSize="10sp" />

        <ImageView
            android:id="@+id/maintab_dis_reddot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/maintab_dis_iv"
            android:src="@mipmap/common_new_tips"
            android:visibility="invisible" />

    </RelativeLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/transprent" />

    <RelativeLayout
        android:id="@+id/maintab_circle"
        android:layout_width="40dp"
        android:gravity="center_vertical"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/maintab_circle_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:src="@drawable/maintab_circle_iv" />

        <TextView
            android:id="@+id/maintab_circle_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/maintab_circle_iv"
            android:layout_centerHorizontal="true"
            android:text="番剧"
            android:textColor="@drawable/maintab_text_color"
            android:textSize="10sp" />

        <ImageView
            android:id="@+id/maintab_circle_reddot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/maintab_circle_tv"
            android:src="@mipmap/common_new_tips"
            android:visibility="invisible" />

    </RelativeLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/transprent" />

    <ImageView
        android:id="@+id/maintab_add"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:visibility="visible"
        android:src="@mipmap/maintab_new_normal"
        android:layout_gravity="center_vertical"
        />


    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/transprent" />

    <RelativeLayout
        android:id="@+id/maintab_msg"
        android:layout_width="40dp"
        android:gravity="center_vertical"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/maintab_msg_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/maintab_msg_iv" />

        <TextView
            android:id="@+id/maintab_msg_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/maintab_msg_iv"
            android:layout_centerHorizontal="true"
            android:text="消息"
            android:textColor="@drawable/maintab_text_color"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/maintab_msg_reddot"
            android:layout_width="wrap_content"
            android:minWidth="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="2dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:gravity="center"
            android:text="99"
            android:textSize="10sp"
            android:textColor="@color/color_FFFFFFFF"
            android:layout_alignParentRight="true"
            android:background="@drawable/app_ntf_count_bg"
            android:visibility="invisible" />
    </RelativeLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/transprent" />

    <RelativeLayout
        android:id="@+id/maintab_mine"
        android:layout_width="40dp"
        android:gravity="center_vertical"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/maintab_mine_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/maintab_mine" />

        <TextView
            android:id="@+id/maintab_mine_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/maintab_mine_iv"
            android:layout_centerHorizontal="true"
            android:text="我的"
            android:textColor="@drawable/maintab_text_color"
            android:textSize="10sp" />

        <ImageView
            android:id="@+id/maintab_mine_reddot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/maintab_mine_tv"
            android:src="@mipmap/common_new_tips"
            android:visibility="invisible" />
    </RelativeLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/transprent" />

</LinearLayout>