<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <TextView
        android:id="@+id/card_show_info_list_header_card_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="帖子标题标题标题"
        android:textSize="18sp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:layout_marginTop="10dp"
        >
        <ImageView
            android:id="@+id/card_show_info_list_header_user_icon"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:scaleType="centerCrop"
            android:layout_marginRight="10dp"
            />
        <TextView
            android:id="@+id/card_show_info_list_header_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户昵称"
            android:textColor="@color/color_FF7B7B7B"
            android:textSize="15sp"
            android:layout_toRightOf="@id/card_show_info_list_header_user_icon"
            />
        <TextView
            android:id="@+id/card_show_info_list_header_card_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="第1楼·共N楼·一天前"
            android:textSize="13sp"
            android:textColor="@color/color_FF9B9B9B"
            android:layout_toRightOf="@id/card_show_info_list_header_user_icon"
            android:layout_alignBottom="@id/card_show_info_list_header_user_icon"
            />
        <TextView
            android:id="@+id/card_show_info_list_header_card_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="···"
            android:textSize="15sp"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:layout_alignParentRight="true"
            />
        <TextView
            android:id="@+id/card_show_info_list_header_card_see_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="72"
            android:textSize="13sp"
            android:textColor="@color/color_FF9B9B9B"
            android:layout_alignParentRight="true"
            android:layout_below="@id/card_show_info_list_header_card_more"
            android:layout_marginLeft="5dp"
            />
        <ImageView
            android:id="@+id/card_show_info_list_header_card_see_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/card_show_info_list_header_card_see_count"
            android:src="@mipmap/see_count_icon"
            android:layout_alignTop="@id/card_show_info_list_header_card_see_count"
            android:layout_alignBottom="@id/card_show_info_list_header_card_see_count"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/card_show_info_list_header_card_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:layout_marginTop="10dp"
        android:text="帖子内容帖子内容帖子内容帖子内容帖子内容帖子内容帖子内容帖子内容"
        />
    <LinearLayout
        android:id="@+id/card_show_info_list_header_card_image_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        ></LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        >

        <RelativeLayout
            android:id="@+id/card_show_info_list_header_card_collection_layout"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_centerInParent="true"
            android:background="@drawable/bg_card_show_header_collection"
            >
            <CheckBox
                android:id="@+id/card_show_info_list_header_card_collection"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:button="@drawable/card_show_header_collection"
                android:text="收藏"
                android:layout_centerInParent="true"
                android:textColor="@color/color_FFFFFFFF"
                android:textSize="10sp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/card_show_info_list_header_card_like_layout"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_toLeftOf="@id/card_show_info_list_header_card_collection_layout"
            android:background="@drawable/bg_card_show_header_like"
            android:layout_marginRight="15dp"
            >
            <CheckBox
                android:id="@+id/card_show_info_list_header_card_like"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:button="@drawable/card_show_header_like"
                android:text="喜欢"
                android:gravity="center"
                android:textColor="@color/color_FFFFFFFF"
                android:textSize="10sp"
                />
        </RelativeLayout>

        <Button
            android:id="@+id/card_show_info_list_header_card_reply"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:drawableLeft="@mipmap/card_show_header_reply"
            android:background="@drawable/bg_card_show_header_reply"
            android:text="回复"
            android:textColor="@color/color_FFFFFFFF"
            android:textSize="10sp"
            android:layout_toRightOf="@id/card_show_info_list_header_card_collection_layout"
            android:layout_marginLeft="15dp"
            />
    </RelativeLayout>
</LinearLayout>