<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="15dp">
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/bangumi_view_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleType="centerCrop"
        app:riv_corner_radius_bottom_left="6dp"
        app:riv_corner_radius_top_left="6dp"
        app:riv_corner_radius_bottom_right="0dp"
        app:riv_corner_radius_top_right="0dp"
        app:riv_border_width="0dp"
        app:riv_oval="false"
        />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:padding="5dp"
            android:layout_toRightOf="@id/bangumi_view_image"
            android:background="@drawable/bg_bangumi_for_show_bg"
            >
            <TextView
                android:id="@+id/bangumi_view_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="番剧名字"
                android:maxLines="1"
                android:textSize="16sp"
                android:textColor="@color/color_FF5B5B5B"
                />
            <TextView
                android:id="@+id/bangumi_view_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/bangumi_view_name"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="5dp"
                android:text="番剧简介"
                android:textColor="@color/color_FF7B7B7B"
                android:textSize="12sp"
                android:ellipsize="end"
                android:maxLines="2"
                />
        </RelativeLayout>


</RelativeLayout>