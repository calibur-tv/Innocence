<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.image.CreateImageAlbumActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:fitsSystemWindows="true"
        android:background="@color/theme_magic_sakura_primary">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <ImageView
                android:id="@+id/create_image_album_back"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@mipmap/app_btn_back_white"
                android:layout_centerVertical="true"
                android:padding="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="新建相册"
                android:textSize="18sp"
                android:textColor="@color/color_FFFFFFFF"
                />
            <TextView
                android:id="@+id/create_image_album_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:text="确定"
                android:textSize="18sp"
                android:textColor="@color/color_FFFFFFFF"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/color_FFF4F4F4">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="15dp"
                android:paddingLeft="17dp"
                android:paddingRight="17dp"
                android:paddingBottom="25dp"
                >
                <RelativeLayout
                    android:id="@+id/create_image_album_image_add"
                    android:layout_width="73dp"
                    android:layout_height="92dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/bg_selected_img_add"
                    >
                    <ImageView
                        android:src="@mipmap/ic_add_create_new_image"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="25dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="19dp"
                        android:text="封面"
                        android:textColor="@color/theme_magic_sakura_primary"
                        android:textSize="12sp"
                        />

                </RelativeLayout>

                <ImageView
                    android:id="@+id/create_image_album_image_src"
                    android:layout_width="73dp"
                    android:layout_height="92dp"
                    android:scaleType="centerCrop"
                    android:layout_centerHorizontal="true"
                    android:visibility="gone"
                    />
            </RelativeLayout>
            <EditText
                android:id="@+id/create_image_album_picture_name"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:background="@color/color_FFFFFFFF"
                android:hint="请输入相册名"
                android:paddingLeft="17dp"
                android:paddingRight="17dp"
                android:gravity="center_vertical"
                android:textSize="14sp"
                android:textColor="@color/color_FF333333"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginRight="17dp"
                android:layout_marginLeft="17dp"
                android:background="@color/color_FFEEEEEE"
                />
            <LinearLayout
                android:id="@+id/create_image_album_is_creator_layout"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:paddingLeft="17dp"
                android:paddingRight="17dp"
                android:background="@color/color_FFFFFFFF"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="是否原创"
                    android:layout_marginRight="5dp"
                    android:gravity="center"
                    android:textColor="@color/color_FF333333"
                    android:textSize="14sp"
                    />
                <com.suke.widget.SwitchButton
                    android:id="@+id/create_image_album_is_creator"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    app:sb_show_indicator="false"
                    android:layout_gravity="center_vertical"
                    app:sb_checked_color="@color/theme_magic_sakura_primary"
                    />
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/create_image_album_choose_bangumi_layout"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:paddingLeft="17dp"
                android:paddingRight="17dp"
                android:background="@color/color_FFFFFFFF"
                >
                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/create_image_album_choose_bangumi_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    app:riv_border_color="@color/theme_magic_sakura_primary"
                    app:riv_border_width="0dp"
                    android:src="@mipmap/glide_place_holder_img"
                    />
                <TextView
                    android:id="@+id/create_image_album_choose_bangumi_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/create_image_album_choose_bangumi_icon"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="30dp"
                    android:text="请选择番剧"
                    android:textColor="@color/color_FF333333"
                    android:textSize="14sp"
                    android:maxLines="1"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="〉"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textColor="@color/color_FF7B7B7B"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentTop="true"
                    android:background="@color/color_FFEEEEEE"
                    />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>
</android.support.v4.widget.DrawerLayout>