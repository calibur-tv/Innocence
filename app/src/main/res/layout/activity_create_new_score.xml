<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.score.CreateNewScoreActivity">
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:fitsSystemWindows="true"
       android:background="@color/theme_magic_sakura_primary"
       >
       <RelativeLayout
           android:id="@+id/score_create_new_activity_title_layout"
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:background="@color/theme_magic_sakura_primary"
           >
           <ImageView
               android:id="@+id/score_create_new_activity_title_back"
               android:layout_width="45dp"
               android:layout_height="45dp"
               android:src="@mipmap/app_btn_back_white"
               android:padding="12dp"
               android:layout_centerVertical="true"
               />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerInParent="true"
               android:textSize="16sp"
               android:text="发漫评"
               android:textColor="@color/color_FFFFFFFF"
               />
       </RelativeLayout>

       <calibur.core.widget.webview.AthenaWebView
           android:id="@+id/score_create_new_activity_web_view"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_below="@id/score_create_new_activity_title_layout"
           android:background="@color/color_FFFFFFFF"/>

       <ImageView
           android:id="@+id/score_create_new_activity_loading_view"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:background="@color/color_FFFFFFFF"
           android:scaleType="centerInside"
           android:layout_below="@id/score_create_new_activity_title_layout"
           android:visibility="gone"/>
   </RelativeLayout>


</android.support.v4.widget.DrawerLayout>