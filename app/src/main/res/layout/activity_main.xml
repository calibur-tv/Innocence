<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.riuir.calibur.ui.home.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/theme_magic_sakura_primary"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/framelayout_main"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_alignParentTop="true"
            android:background="@color/color_FFFFFFFF"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/color_FFFFFFFF">
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_FFEEEEEE"
                />
            <com.riuir.calibur.ui.widget.MainBottomBar
                android:id="@+id/maintab_bottombar"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:background="@color/color_FFFFFFFF"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>
