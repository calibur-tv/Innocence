<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.home.user.UserMainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <ImageView
            android:id="@+id/user_main_activity_banner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:background="@color/theme_magic_sakura_primary"
            />
        <ImageView
            android:id="@+id/user_main_activity_user_icon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:scaleType="centerInside"
            />
        <TextView
            android:id="@+id/user_main_activity_user_name"
            android:layout_marginTop="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户昵称"
            android:textColor="@color/color_FFFFFFFF"
            android:textSize="15sp"
            android:layout_below="@id/user_main_activity_user_icon"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:id="@+id/user_main_activity_user_signature"
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:text="用户签名"
            android:maxLines="2"
            android:gravity="center"
            android:textColor="@color/color_FFFFFFFF"
            android:textSize="13sp"
            android:layout_below="@id/user_main_activity_user_name"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>
    <com.riuir.calibur.ui.view.MyPagerSlidingTabStrip
        android:id="@+id/user_main_activity_pager_tab"
        android:layout_width="match_parent"
        android:background="@color/theme_magic_sakura_primary"
        android:layout_height="40dp"></com.riuir.calibur.ui.view.MyPagerSlidingTabStrip>
    <android.support.v4.view.ViewPager
        android:id="@+id/user_main_activity_view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        ></android.support.v4.view.ViewPager>

</LinearLayout> 