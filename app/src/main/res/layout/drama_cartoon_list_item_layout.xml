<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/bg_drama_cartoon_list_item"
        android:layout_margin="5dp"
        android:elevation="2dp"
        >
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/drama_cartoon_list_item_source"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:riv_corner_radius="15dp"
            android:scaleType="centerCrop"
            />
        <TextView
            android:id="@+id/drama_cartoon_list_item_title"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="6dp"
            android:paddingBottom="9dp"
            android:textColor="@color/color_FFF3F3F3"
            android:textSize="12sp"
            android:text="漫画标题"
            android:lines="1"
            android:ellipsize="end"
            android:gravity="center"
            android:background="@drawable/image_list_title_bg"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>
</RelativeLayout>