<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >
    <RelativeLayout
        android:id="@+id/mine_fragment_mine_layout"
        android:layout_width="match_parent"
        android:background="@color/theme_magic_sakura_primary"
        android:layout_height="120dp">
        <ImageView
            android:id="@+id/mine_fragment_mine_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:scaleType="centerCrop"
            />
        <TextView
            android:id="@+id/mine_fragment_mine_name"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignTop="@id/mine_fragment_mine_icon"
            android:layout_toRightOf="@id/mine_fragment_mine_icon"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="我的昵称"
            android:textSize="16sp"
            android:textColor="@color/color_FFFFFFFF"
            />
        <TextView
            android:id="@+id/mine_fragment_coin_number"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignLeft="@id/mine_fragment_mine_name"
            android:layout_alignBottom="@id/mine_fragment_mine_icon"
            android:gravity="center"
            android:text="金币：888"
            android:textSize="14sp"
            android:textColor="@color/color_FFFFFFFF"
            />
        <TextView
            android:id="@+id/mine_fragment_sign_in_btn"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:layout_toRightOf="@id/mine_fragment_coin_number"
            android:layout_alignBottom="@id/mine_fragment_mine_icon"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="点击签到"
            android:background="@drawable/bg_follow_anime_btn"
            android:textSize="13sp"
            android:textColor="@color/color_FFFFFFFF"
            />
        <TextView
            android:id="@+id/mine_fragment_mine_more_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:text="〉"
            android:textSize="20sp"
            android:textColor="@color/color_FFFFFFFF"
            />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="每日签到赚金币，1 金币 = 1 人民币，满 100 可以提现哦(＾Ｕ＾)ノ~"
        android:textColor="@color/color_FF9B9B9B"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_FFDDDDDD"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <RelativeLayout
            android:id="@+id/mine_fragment_mine_home_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <ImageView
                android:id="@+id/mine_fragment_mine_home_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:src="@mipmap/mine_home_icon"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/mine_fragment_mine_home_icon"
                android:text="我的主页"
                android:textSize="12sp"
                android:textColor="@color/color_FF9B9B9B"
                />
        </RelativeLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/color_FFDDDDDD" />
        <RelativeLayout
            android:id="@+id/mine_fragment_mine_collection_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <ImageView
                android:id="@+id/mine_fragment_mine_collection_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:src="@mipmap/mine_collection_icon"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/mine_fragment_mine_collection_icon"
                android:text="我的番剧"
                android:textSize="12sp"
                android:textColor="@color/color_FF9B9B9B"
                />
        </RelativeLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/color_FFDDDDDD" />
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/mine_fragment_mine_cardlayout"
            >
            <ImageView
                android:id="@+id/mine_fragment_mine_card_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:src="@mipmap/mine_card_icon"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/mine_fragment_mine_card_icon"
                android:text="我的帖子"
                android:textSize="12sp"
                android:textColor="@color/color_FF9B9B9B"
                />
        </RelativeLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/color_FFDDDDDD" />
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <ImageView
                android:id="@+id/mine_fragment_mine_draft_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:src="@mipmap/mine_draft_icon"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/mine_fragment_mine_draft_icon"
                android:text="我的草稿"
                android:textSize="12sp"
                android:textColor="@color/color_FF9B9B9B"
                />
        </RelativeLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_FFDDDDDD"
        />
    <Button
        android:id="@+id/mine_fragment_mine_user_log_off"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginRight="14dp"
        android:layout_marginLeft="14dp"
        android:text="注销登录"
        android:textSize="16sp"
        android:textColor="@color/color_FFFFFFFF"
        android:background="@drawable/bg_login_button_normal"
        />

</LinearLayout>