<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="角色信息"
        android:textSize="14sp"
        android:textColor="@color/color_FF7B7B7B"
        android:layout_marginLeft="14sp"
        android:layout_marginTop="18sp"
        android:layout_marginBottom="6dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        >
        <ImageView
            android:id="@+id/role_show_info_header_role_icon"
            android:layout_width="65dp"
            android:layout_height="90dp"
            android:layout_marginRight="6dp"
            android:scaleType="fitCenter"
            />
        <TextView
            android:id="@+id/role_show_info_header_role_name"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="角色昵称"
            android:layout_toRightOf="@id/role_show_info_header_role_icon"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/color_FF5B5B5B"
            android:gravity="center_vertical"
            android:layout_marginBottom="5dp"
            />
        <TextView
            android:id="@+id/role_show_info_header_role_lover_title"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="守护者:"
            android:layout_toRightOf="@id/role_show_info_header_role_icon"
            android:layout_below="@id/role_show_info_header_role_name"
            android:textSize="14sp"
            android:textColor="@color/color_FF5B5B5B"
            android:gravity="center_vertical"
            android:layout_marginRight="6dp"
            />
        <ImageView
            android:id="@+id/role_show_info_header_role_lover_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="centerInside"
            android:layout_toRightOf="@id/role_show_info_header_role_lover_title"
            android:layout_below="@id/role_show_info_header_role_name"
            android:layout_marginRight="6dp"
            />
        <TextView
            android:id="@+id/role_show_info_header_role_lover_name"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="用户昵称"
            android:layout_toRightOf="@id/role_show_info_header_role_lover_icon"
            android:layout_below="@id/role_show_info_header_role_name"
            android:textSize="14sp"
            android:textColor="@color/color_FF5B5B5B"
            android:gravity="center_vertical"
            />
        <Button
            android:id="@+id/role_show_info_header_role_star_btn"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_toRightOf="@id/role_show_info_header_role_icon"
            android:layout_alignBottom="@id/role_show_info_header_role_icon"
            android:background="@drawable/bg_login_button_normal"
            android:text="为TA应援"
            android:textColor="@color/color_FFFFFFFF"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="角色简介"
        android:textSize="14sp"
        android:textColor="@color/color_FF7B7B7B"
        android:layout_marginLeft="14sp"
        android:layout_marginTop="12sp"
        android:layout_marginBottom="8dp"
        />
    <TextView
        android:id="@+id/role_show_info_header_role_intro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:text="介绍：角色介绍"
        android:textSize="12sp"
        android:textColor="@color/color_FF5B5B5B"
        android:layout_marginBottom="8dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginBottom="8dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="别名："
            android:textSize="12sp"
            android:textColor="@color/color_FF5B5B5B"
            />
        <TextView
            android:id="@+id/role_show_info_header_role_other_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="别名,别名"
            android:textSize="12sp"
            android:textColor="@color/color_FF5B5B5B"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/role_show_info_header_role_fans"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:text="粉丝：共有88个粉丝，收获了888个金币"
        android:textSize="12sp"
        android:textColor="@color/color_FF5B5B5B"
        android:layout_marginBottom="14dp"
        />
    <com.riuir.calibur.ui.widget.BangumiForShowView
        android:id="@+id/role_show_info_header_bangmui"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.riuir.calibur.ui.widget.BangumiForShowView>

</LinearLayout>