<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingLeft="14dp"
    android:paddingRight="14dp"
    >
    <TextView
        android:id="@+id/user_reply_list_item_card_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="回复：帖子名字"
        android:textSize="16sp"
        android:textColor="@color/color_FF5B5B5B"

        />
    <TextView
        android:id="@+id/user_reply_list_item_card_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_reply_list_item_card_name"
        android:layout_marginTop="6dp"
        android:text="帖子内容"
        android:padding="6dp"
        android:layout_marginLeft="10dp"
        android:textSize="14sp"
        android:maxLines="5"
        android:background="@color/color_FFD9E3ED"
        android:textColor="@color/color_FF7B7B7B"
        />
    <LinearLayout
        android:id="@+id/user_reply_list_item_card_image_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_reply_list_item_card_desc"
        android:orientation="vertical"
        android:padding="6dp"
        android:layout_marginLeft="10dp"
        android:background="@color/color_FFD9E3ED"
        >
        <ImageView
            android:id="@+id/user_reply_list_item_card_big_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitStart"
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:transitionName="preview_card_picture"
            />
        <LinearLayout
            android:id="@+id/user_reply_list_item_card_little_image_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            >
            <ImageView
                android:id="@+id/user_reply_list_item_card_little_image_1"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:visibility="invisible"
                android:transitionName="preview_card_picture"
                />
            <ImageView
                android:id="@+id/user_reply_list_item_card_little_image_2"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_marginLeft="15dp"
                android:scaleType="centerCrop"
                android:visibility="invisible"
                android:transitionName="preview_card_picture"
                />
            <ImageView
                android:id="@+id/user_reply_list_item_card_little_image_3"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_marginLeft="15dp"
                android:scaleType="centerCrop"
                android:visibility="invisible"
                android:transitionName="preview_card_picture"
                />
        </LinearLayout>


    </LinearLayout>
    <TextView
        android:id="@+id/user_reply_list_item_card_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_reply_list_item_card_image_layout"
        android:text="回复内容"
        android:layout_marginTop="6dp"
        android:textSize="14sp"
        android:maxLines="5"
        android:textColor="@color/color_FF5B5B5B"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/color_FFD9E3ED"
        />
</RelativeLayout>