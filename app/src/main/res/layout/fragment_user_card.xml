<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.home.user.UserCardFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/theme_magic_sakura_primary">
        <com.riuir.calibur.ui.view.MyPagerSlidingTabStrip
            android:id="@+id/user_card_pager_tab"
            android:layout_width="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_height="40dp"></com.riuir.calibur.ui.view.MyPagerSlidingTabStrip>
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/user_card_view_pager"
        android:layout_width="match_parent"
        android:background="@color/color_FFFFFFFF"
        android:layout_height="0dp"
        android:layout_weight="2"
        ></android.support.v4.view.ViewPager>

</LinearLayout>