<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.image.CreateNewImageActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        android:background="@color/theme_magic_sakura_primary">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/create_new_image_activity_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上传图片"
                android:layout_centerInParent="true"
                android:textSize="16sp"
                android:textColor="@color/color_FFFFFFFF"
                />
            <ImageView
                android:id="@+id/create_new_image_activity_cancel"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:padding="12dp"
                android:src="@mipmap/app_btn_back_white"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <com.riuir.calibur.ui.view.MyPagerSlidingTabStrip
                android:id="@+id/create_new_image_activity_pager_tab"
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_height="40dp"
                android:layout_marginBottom="9dp"
                >
            </com.riuir.calibur.ui.view.MyPagerSlidingTabStrip>
        </RelativeLayout>
        <android.support.v4.view.ViewPager
            android:id="@+id/create_new_image_activity_view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_FFFFFFFF"></android.support.v4.view.ViewPager>
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>