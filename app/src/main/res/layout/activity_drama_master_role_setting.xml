<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.Drama.dramaConfig.DramaMasterRoleSettingActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:fitsSystemWindows="true"
        android:background="@color/theme_magic_sakura_primary">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:id="@+id/drama_master_role_setting_back"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@mipmap/app_btn_back_white"
                android:padding="12dp"
                android:layout_centerVertical="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="添加偶像"
                android:textColor="@color/color_FFFFFFFF"
                android:textSize="16sp"
                />
            <TextView
                android:id="@+id/drama_master_role_setting_finish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="完成"
                android:layout_marginRight="12dp"
                android:textColor="@color/color_FFFFFFFF"
                android:textSize="15sp"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_FFF4F4F4"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="15dp"
                android:paddingLeft="17dp"
                android:paddingRight="17dp"
                android:paddingBottom="25dp"
                >
                <RelativeLayout
                    android:id="@+id/drama_master_role_setting_image_add"
                    android:layout_width="73dp"
                    android:layout_height="92dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/bg_selected_img_add"
                    >
                    <ImageView
                        android:src="@mipmap/ic_add_create_new_image"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="25dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="19dp"
                        android:text="头像"
                        android:textColor="@color/theme_magic_sakura_primary"
                        android:textSize="12sp"
                        />

                </RelativeLayout>

                <ImageView
                    android:id="@+id/drama_master_role_setting_image_src"
                    android:layout_width="73dp"
                    android:layout_height="92dp"
                    android:scaleType="centerCrop"
                    android:layout_centerHorizontal="true"
                    android:visibility="gone"
                    />
            </RelativeLayout>

            <EditText
                android:id="@+id/drama_master_role_setting_role_name"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:background="@color/color_FFFFFFFF"
                android:hint="角色的中文名"
                android:lines="1"
                android:paddingLeft="17dp"
                android:paddingRight="17dp"
                android:gravity="center_vertical"
                android:textSize="14sp"
                android:textColor="@color/color_FF333333"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginRight="17dp"
                android:layout_marginLeft="17dp"
                android:background="@color/color_FFEEEEEE"
                />
            <EditText
                android:id="@+id/drama_master_role_setting_role_other_name"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:background="@color/color_FFFFFFFF"
                android:hint="角色的别名，如：英文名，日文名（用英文逗号隔开）"
                android:paddingLeft="17dp"
                android:paddingRight="17dp"
                android:gravity="center_vertical"
                android:textSize="14sp"
                android:textColor="@color/color_FF333333"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginRight="17dp"
                android:layout_marginLeft="17dp"
                android:background="@color/color_FFEEEEEE"
                />
            <EditText
                android:id="@+id/drama_master_role_setting_role_summary"
                android:layout_width="match_parent"
                android:layout_height="108dp"
                android:background="@color/color_FFFFFFFF"
                android:hint="请输入角色简介"
                android:gravity="top"
                android:paddingLeft="17dp"
                android:paddingRight="17dp"
                android:paddingTop="10dp"
                android:textSize="14sp"
                android:textColor="@color/color_FF333333"
                />

            <TextView
                android:id="@+id/drama_master_role_setting_role_tips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:paddingLeft="17dp"
                android:paddingRight="17dp"
                android:textSize="14sp"
                android:textColor="@color/color_FF9B9B9B"
                android:text="1：请勿添加与《本番剧》无关的偶像.\n2：添加偶像之前，请先在偶像列表里查找是否已添加过，请勿重复添加."
                />

        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>