<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.card.CardChildCommentActivity"
    >

    <ScrollView
        android:id="@+id/card_child_comment_header_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="45dp"
        >

        <LinearLayout
            android:id="@+id/card_child_comment_header_comment_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="12dp"
                android:paddingLeft="12dp"
                >
                <ImageView
                    android:id="@+id/card_child_comment_header_icon"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:scaleType="centerCrop"
                    />
                <TextView
                    android:id="@+id/card_child_comment_header_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="用户昵称"
                    android:textColor="@color/color_FF7B7B7B"
                    android:textSize="15sp"
                    android:layout_alignTop="@id/card_child_comment_header_icon"
                    android:layout_toRightOf="@id/card_child_comment_header_icon"
                    />
                <TextView
                    android:id="@+id/card_child_comment_header_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="第1楼·共N楼·一天前"
                    android:textSize="13sp"
                    android:textColor="@color/color_FF9B9B9B"
                    android:layout_toRightOf="@id/card_child_comment_header_icon"
                    android:layout_alignBottom="@id/card_child_comment_header_icon"
                    />
                <TextView
                    android:id="@+id/card_child_comment_header_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="···"
                    android:textSize="18sp"
                    android:paddingRight="8dp"
                    android:paddingLeft="8dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>
            <TextView
                android:id="@+id/card_child_comment_header_comment_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="评论评论评论评论评论评论评论评论评论评论评论评论评论评论评论"
                />
            <LinearLayout
                android:id="@+id/card_child_comment_header_comment_image_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="67dp"
                android:layout_marginRight="12dp"
                >
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/card_child_comment_header_child_comment_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_FFEEEEEE"
                android:layout_marginLeft="67dp"
                android:layout_marginRight="12dp"
                ></android.support.v7.widget.RecyclerView>

        </LinearLayout>

    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <EditText
            android:id="@+id/card_reply_comment_edit"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="6"
            android:background="@drawable/bg_edittext_normal"
            android:maxLength="50"
            android:hint="回复："
            android:textSize="12sp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            />
        <Button
            android:id="@+id/card_reply_comment_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

            />
    </LinearLayout>

</RelativeLayout>