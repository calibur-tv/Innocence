<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/theme_magic_sakura_primary</item>
        <item name="colorPrimaryDark">@color/theme_magic_sakura_primary_dark</item>
        <item name="colorAccent">@color/theme_magic_sakura_primary</item>
    </style>

    <style name="splash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowBackground">@color/theme_magic_sakura_primary</item>
    </style>

</resources>
