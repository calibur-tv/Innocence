<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid android:color="@color/theme_magic_sakura_primary_dark" />
            <corners android:radius="22dip"/>
            <stroke
                android:width="1dip"
                android:color="@color/theme_magic_sakura_primary_dark" />
        </shape>
    </item>
    <item android:state_pressed="false" >
        <shape>
            <solid android:color="@color/theme_magic_sakura_primary" />
            <corners android:radius="22dip"/>
            <stroke
                android:width="1dip"
                android:color="@color/theme_magic_sakura_primary" />
        </shape>
    </item>
</selector>